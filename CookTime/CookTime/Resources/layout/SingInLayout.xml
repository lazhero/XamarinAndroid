
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/xd"
            android:text="Sing in to you CookTime Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:hint="@string/singin.texName.hint" />
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:hint="@string/singin.texPassword.hint" />

        <Button
            android:id="@+id/singinButton"
            android:layout_centerInParent="true"
            android:layout_width="280.0dp"
            android:layout_height="55.0dp"
            android:text="@string/singin.singinButton.text"/>
        

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/displayNameText"
            android:text="Dont' have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/singupButton"
            android:layout_centerInParent="true"
            android:text="@string/singin.singupButton.text"
            android:layout_width="276.0dp"
            android:layout_height="40dp"
            android:layout_marginRight="0.0dp" />


    </LinearLayout>
</RelativeLayout>