<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE2C6">
    
    <TextView
        android:id="@+id/txt_recipeName"
        android:text="Recipe Name: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txt_authorName"
        android:text="Author Name: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/txt_dishType"
        android:text="Dish type: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_portions"
        android:text="Portions: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_preparationTime"
        android:text="Preparation Time: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_course"
        android:text="Course: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <TextView
        android:id="@+id/txt_difficulty"
        android:text="Difficulty: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_tags"
        android:text="Tags: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_ingredients"
        android:text="Ingredients: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_steps"
        android:text="Steps: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_price"
        android:text="Price: "

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>