
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE2C6">
    <Toolbar
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:minWidth="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar1"/>

    <TextView
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />
    <Button
        android:text="Administration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonadministration" />
    <Button
        android:text="Following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFollowing" />
    <Button
        android:text="Followers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFollowers" />
    <TextView
        android:text="Select how you want to order your menu"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textselect" />
    <LinearLayout
        android:id="@+id/menuLinearLayout"
        android:layout_below="@+id/midTableLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_difficulty"
            android:layout_width="105.0dp"
            android:layout_height="60.0dp"
            android:text="Difficulty"
        />
        <Button
            android:id="@+id/btn_punctuation"
            android:text="Punctuation"
            android:layout_width="130.0dp"
            android:layout_height="60.0dp"/>
        <Button
            android:layout_width="105.0dp"
            android:layout_height="60.0dp"
            android:text="Date"
            android:id="@+id/btn_date"/>

        <ListView
            android:id="@+id/list_myMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



    </LinearLayout>




</LinearLayout>